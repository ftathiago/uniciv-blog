@using BlogPessoal.Web.Models

@model IEnumerable<CategoriaDeArtigo>

@{
    ViewBag.Title = "Index";
}

<h2>Categoria de artigo</h2>

<div>
    @Html.ActionLink("Adicionar novo", "Create")
</div>

<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Descrição
        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @item.Nome
            </td>
            <td>
                @item.Descricao
            </td>
        </tr>
    }
</table>